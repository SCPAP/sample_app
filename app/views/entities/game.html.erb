<script type="text/javascript">
    var boxopened1 = "";
    var boxopened2 = "";
    var imgopened = "";
    var currentopened = "";
    var count = 0;
    var found =  0;
    var state = false;

    function tag(){
        $("#"+ boxopened1 +" img").addClass(document.forms[1].elements[0].value);
        var id = imgopened.substring(50).charAt(0);
		$.ajax({
	                            url: "entities/" + id + "/addtags",
	                            contentType: "application/json",
	                            type: "POST",
	                            data: JSON.stringify({ id: id, tags: document.forms[1].elements[0].value }),
	                            success: function (result) {
	                            },
	                            error: function (result) {                       
	                            }
	                        });
    }


    function search(){
        $("img." + document.forms[0].elements[0].value).parent().attr('style', 'border: 1px solid #FF0000;');

        setTimeout(function() {
            $("img." + document.forms[0].elements[0].value).parent().attr('style', 'none');
        }, 2000);
    }

    function randomFromTo(from, to){
        return Math.floor(Math.random() * (to - from + 1) + from);
    }

    function shuffle() {
        var children = $("#boxcard").children();
        var child = $("#boxcard div:first-child");

        var array_img = new Array();

        for (i=0; i<children.length; i++) {
            array_img[i] = $("#"+child.attr("id")+" img").attr("src");
            child = child.next();
        }

        var child = $("#boxcard div:first-child");

        for (z=0; z<children.length; z++) {
            randIndex = randomFromTo(0, array_img.length - 1);

            // set new image
            $("#"+child.attr("id")+" img").attr("src", array_img[randIndex]);
            array_img.splice(randIndex, 1);

            child = child.next();
        }
    }

    function resetGame() {
        shuffle();
        $("#boxcard div img").hide();
        $("img").removeClass("opacity");
        count = 0;
        $("#msg").remove();
        $("#count").html("" + count);
        boxopened1 = "";
        imgopened = "";
        found = 0;
        return false;
    }

    $(document).ready(function() {
        $("#boxcard div img").hide();
        $("#boxcard div").click(openCard);

        shuffle();

        function openCard() {
			alert("Test!");
            id = $(this).attr("id");

            if ($("#"+id).attr('class') == "opencard")
                $('#element_to_pop_up').bPopup();
            
            if ($("#"+id+" img").is(":hidden")) {
                $("#boxcard div").unbind("click", openCard);
                $("#"+id+" img").slideDown('fast');
                $("#"+id).addClass('opencard');

                if (imgopened == "") {
                    boxopened1 = id;
                    imgopened = $("#"+id+" img").attr("src");
                    $('#element_to_pop_up').html("<img src=" + imgopened + " height='500' width='400'/> <form action='javascript:tag();' method='post'> <br>  <input type='text' value='" + $("#"+id+" img").attr('class') + "'/> <input type='submit' value='Tag' /> </form>");
                    setTimeout(function() {
                        $("#boxcard div").bind("click", openCard);
                    }, 400);
                } else {
                    boxopened2 = id;
                    currentopened = $("#"+id+" img").attr("src");
                    $('#element_to_pop_up').html("<img src=" + currentopened + " height='500' width='400'/> <form action='javascript:tag();' method='post'> <br>  <input type='text' value='" + $("#"+id+" img").attr('class') + "'/> <input type='submit' value='Tag' /> </form>");
                    if (imgopened != currentopened) {
                        // close again
                        setTimeout(function() {
                            $("#"+id+" img").slideUp('fast');
                            $("#"+boxopened1 +" img").slideUp('fast');
                            $("#"+boxopened1).removeClass('opencard');
                            $("#"+boxopened2).removeClass('opencard');
                            boxopened1 = "";
                            imgopened = "";
                        }, 400);
                    } else {
                        // found
                        // $("#"+id+" img").addClass("opacity");
                        // $("#"+boxopened+" img").addClass("opacity");
                        $("#"+id).addClass('opencard');
                        $('#element_to_pop_up').html("<img src=" + currentopened + " height='500' width='400'/> <form action='javascript:tag();' method='post'> <br>  <input type='text' value='" + $("#"+id+" img").attr('class') + "'/> <input type='submit' value='Tag' /> </form>");
                        found++;
                        boxopened1 = "";
                        imgopened = "";
                    }
                    
                    setTimeout(function() {
                        $("#boxcard div").bind("click", openCard);
                    }, 400);
                }

                count++;
                $("#count").html("" + count);

                if (found == 10) {
                    msg = '<span id="msg">Congrats ! You Found All Sushi With </span>';
                    $("span.link").prepend(msg);
                }
            }
        }
    });
</script>

