<h1>Listing entities</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Mine type</th>
      <th>Filename</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @entities.each do |entity| %>
      <tr>
        <td><%= image_tag load_image_entity_path(entity.id) %></td>
        <td><%= entity.latitude %></td>
        <td><%= entity.longitude %></td>
        <td><%= entity.mine_type %></td>
        <td><%= entity.filename %></td>
        <td><%= link_to 'Show', entity %></td>
        <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
        <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

